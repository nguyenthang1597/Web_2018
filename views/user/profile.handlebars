
{{#section 'title'}} Thông tin cá nhân {{/section}} 

{{#section 'css'}}
<script type="text/javascript" src="./assets/user/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="dialog.js"></script>
<link href="./assets/user/css/master.css" rel="stylesheet">
<script type="text/css" src="./assets/user/css/profile.css"></script>
 {{/section}} 


{{!-- BODY --}}
{{#with user}}
<main id="main" class="section">

  <div class="container">
    <div class="row">
      <!-- MAIN CONTENT -->
      <div class="col-xs-12 col-sm-12 col-md-9">
        <section class="main-content" role="main">
          <form action="/profile/" method="post">

          </form>
          <form class="form-inline">
            <div class="form-group">
              <label for="inputName">Họ tên</label>
              <span style="display:inline-block; width: 111px;"></span>
              <input type="text" class="form-control" id="inputName" value="{{ten}}">
            </div>
          </form>
          <br>
          <form class="form-inline">
            <div class="form-group">
              <label for="inputPhoneNumber">Số điện thoại</label>
              <span style="display:inline-block; width: 70px;"></span>
              <input type="text" class="form-control" id="inputPhoneNumber" value="{{sdt}}">
            </div>
          </form>

          <br>

          <form class="form-inline">
            <div class="form-group">
              <label for="inputIDCardNumber">Số CMND/Hộ chiếu</label>
              <span style="display:inline-block; width: 30px;"></span>
              <input type="text" class="form-control" id="inputIDCardNumber" value="{{cmnd}}">
            </div>
          </form>

          <br>

          <form class="form-inline">
            <div class="form-group">
              <label for="inputEmail">Email</label>
              <span style="display:inline-block; width: 120px;"></span>
              <input class="form-control" type="text" value="{{email}}" style="color:black;" disabled>
            </div>
          </form>

          <br>

          <form class="form-inline">
            <div class="form-group">
              <label for="inputGender">Giới tính</label>
              <span style="display:inline-block; width: 102px;"></span>
              {{#if gioiTinh}}
              <select class="form-control">
                <option selected>Nam</option>
                <option>Nữ</option>
              </select>
              {{else}}
              <select class="form-control">
                <option>Nam</option>
                <option selected>Nữ</option>
              </select>
              {{/if}}
            </div>
          </form>


          <br>
          <form class="form-inline">
            <div class="form-group">
              <label for="inputBirthday">Ngày sinh</label>
              <span style="display:inline-block; width: 93px;"></span>
              <input class="form-control" type="date" value="{{ngaySinh}}">

          </form>

          <br>
          <br>

          <form class="form-inline">
            <div class="form-group">
              <label for="inputAddress">Địa chỉ</label>
              <span style="display:inline-block; width: 113px;"></span>
              <input class="form-control" type="text" value="{{diaChi}}">
            </div>
          </form>

          <br>
          <br>
          <br>
          <div style="text-align:center;">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
          </div>

        </section>
