{{#section 'title'}} Thông tin cá nhân {{/section}} {{#section 'css'}}
<script type="text/javascript" src="./assets/user/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="dialog.js"></script>
<link href="./assets/user/css/master.css" rel="stylesheet">
<script type="text/css" src="./assets/user/css/profile.css"></script> {{/section}}

<body class="noIE inner-page ">

  {{#with account}}
  <main id="main" class="section">

    <div class="container">
      <div class="row">
        <!-- MAIN CONTENT -->
        <div class="col-xs-12 col-sm-12 col-md-9">
          <section class="main-content" role="main">
            <form class="form-inline">
              <div class="form-group">
                <label for="inputName">Họ tên</label>
                <span style="display:inline-block; width: 111px;"></span>
                <input type="text" class="form-control" id="inputName" value="{{ten}}">
              </div>
            </form>
            <br>
            <form class="form-inline">
              <div class="form-group">
                <label for="inputPhoneNumber">Số điện thoại</label>
                <span style="display:inline-block; width: 70px;"></span>
                <input type="text" class="form-control" id="inputPhoneNumber" value="{{sdt}}">
              </div>
            </form>

            <br>

            <form class="form-inline">
              <div class="form-group">
                <label for="inputIDCardNumber">Số CMND/Hộ chiếu</label>
                <span style="display:inline-block; width: 30px;"></span>
                <input type="text" class="form-control" id="inputIDCardNumber" value="{{cmnd}}">
              </div>
            </form>

            <br>

            <form class="form-inline">
              <div class="form-group">
                <label for="inputEmail">Email</label>
                <span style="display:inline-block; width: 120px;"></span>
                <input class="form-control" type="text" value="{{email}}" style="color:black;" disabled>
              </div>
            </form>

            <br>

            <form class="form-inline">
              <div class="form-group">
                <label for="inputGender">Giới tính</label>
                <span style="display:inline-block; width: 102px;"></span>
                <select class="form-control">
                  <option>Nam</option>
                  <option>Nữ</option>
                </select>

              </div>
            </form>


            <br>
            <form class="form-inline">
              <div class="form-group">
                <label for="inputBirthday">Ngày sinh</label>
                <span style="display:inline-block; width: 93px;"></span>
                <input class="form-control" type="text" value="{{ngaySinh}}">
                {{!-- <select id="day" class="form-control">
                  <option>Ngày</option>
                </select>

                <select id="month" class="form-control">
                  <option>Tháng</option>
                </select>

                <select id="year" class="form-control">
                  <option>Năm</option>
                </select> --}}
            </form>

          </section>

          <br>
          <br>
          <br>
          <div style="text-align:center;">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
          </div>


          </div>
          <!-- // MAIN CONTENT -->
          <div class="space40 visible-xs"></div>
          <!-- SIDEBAR -->
          <div class="col-xs-12 col-sm-12 col-md-3">
            <aside class="sidebar">

              <!-- ARCHIVE WIDGET -->
              <div class="widget widget-filter">
                <div class="block_content">
                  <div class="list-group-heading">
                    <span class="list-group-heading-inner">
                      <span style="font-family: all;">Quản lý tài khoản</span>
                    </span>
                  </div>
                  <div class="list-content">
                    <ul>
                      <li><a href="/profile">Thông tin cá nhân</a> </li>
                      <li><a href="/doimatkhau">Đổi mật khẩu</a></li>
                    </ul>
                  </div>

                </div>
              </div>

              <!-- OUR SOCIAL NETWORK WIDGET -->
              <div class="widget widget-social">
                <h3 class="widget-title">
                  <span>OUR SOCIAL NETWORK</span>
                </h3>
                <ul class="unstyled clearfix social-team">
                  <li>
                    <a target="_blank" href="http://fb.com/#">
                      <i class="fa fa-facebook"></i>
                    </a>
                  </li>
                  <li>
                    <a target="_blank" href="http://twitter.com/#">
                      <i class="fa fa-twitter"></i>
                    </a>
                  </li>
                  <li>
                    <a target="_blank" href="http://plus.google.com/#">
                      <i class="fa fa-google"></i>
                    </a>
                  </li>
                  <li>
                    <a target="_blank" href="http://youtube.com/#">
                      <i class="fa fa-youtube"></i>
                    </a>
                  </li>
                  <li>
                    <a target="_blank" href="http://rss.com/#">
                      <i class="fa fa-rss"></i>
                    </a>
                  </li>
                </ul>
              </div>
              <!-- // TAGS WIDGET -->

            </aside>
          </div>


        </div>
      </div>
  </main>
  {{/with}}

</body>

</html>