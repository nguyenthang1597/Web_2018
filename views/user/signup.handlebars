<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup</title>

    <style>
        .g-recaptcha>div {
            margin: 0 auto;
        }
    </style>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.png" />
    <link href="./assets/user/css/master.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="./assets/user/css/signup.css">

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

</head>

<body class="noIE home">
    <!-- HEADER -->
    <div id="main-header">
        <div class="container ">
            <div class="row">
                <div class="col-md-3 spacer"> </div>
                <div class="col-md-6">
                    <!-- NAVIGATION -->
                    <div class="navbar navbar-default navbar-top ">
                        <div class="navbar-collapse">
                            <ul class="nav navbar-nav nav-justified">
                                <li>
                                    <a href="/">
                                        <span>HOME</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/about">
                                        <span>ABOUT</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <span>CONTACT</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/login">
                                        <span>LOGIN</span>
                                    </a>
                                </li>
                                <li class="current">
                                    <a href="/signup">
                                        <span>SIGNUP</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- HEADER END -->

        <!-- Sign -->
        <div class="container myform">
            <div class="row">
                <div class="col-md-8 col-md-push-2">
                    <div class="card">

                        <h2>
                            <i class="glyphicon glyphicon-lock"></i>Tạo Tài Khoản Của Bạn</h2>
                        <form method="POST" role="form" name="myform" onsubmit="return validateForm()">
                            <div class="form-group">
                                <label for="">User Name</label>
                                <input type="text" id="username" name='username' class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="">Email Address</label>
                                <input type="text" id="email" name="email" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="">Password</label>
                                <input type="password" id="password" name="password" class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="">Confirm Password</label>
                                <input type="password" id="confirmpassword" class="form-control">
                            </div>

                            <div class="form-group captcha text-xs-center" id="mycaptcha">
                                <div class="g-recaptcha" data-sitekey="6LefRFUUAAAAAL9KGclN9n3-3C5ySAGc--HfJtpo" data-callback="correctCaptcha"></div>
                            </div>

                            {{#if showError}}
                            <div class="alert alert-danger" style="margin-top: 15px">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <strong>{{showError}}</strong>
                            </div>
                            {{/if}}

                            <div id="tbLoi">

                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Sign -->

        <!-- SCRIPTS -->
        <script type="text/javascript" src="./assets/user/js/jquery-1.11.1.min.js"></script>
        <script src="./assets/user/js/jquery-migrate-1.2.1.js"></script>
        <script src="./assets/user/js/bootstrap-3.1.1.min.js"></script>
        <script src="./assets/user/js/modernizr.custom.js"></script>
        <script src="./assets/user/js/classie.js"></script>
        <script src="./assets/user/js/pathLoader.js"></script>
        <script src="./assets/user/js/waypoints.min.js"></script>
        <script src="./assets/user/js/jflickrfeed.min.js"></script>
        <script src="./assets/user/plugins/selectbox/jquery.selectbox-0.2.js"></script>
        <script src="./assets/user/plugins/backstretch/backstretch-2.0.4.min.js"></script>
        <script src="./assets/user/plugins/camera-slider/camera-slider-1.3.4.min.js"></script>
        <script src="./assets/user/plugins/camera-slider/easing-1.3.min.js"></script>
        <script src="./assets/user/plugins/fancybox/fancybox-1.3.4.pack.js"></script>
        <script src="./assets/user/plugins/fancybox/klass-1.0.min.js"></script>
        <script src="./assets/user/plugins/fancybox/photoswipe-3.0.5.min.js"></script>
        <script src="./assets/user/plugins/hover-animations/transform2d.min.js"></script>
        <script src="./assets/user/plugins/hover-animations/hover-animations-1.0.min.js"></script>
        <script src="./assets/user/js/smart-menu.js"></script>
        <script src="./assets/user/js/cssua.min.js"></script>
        <script src="./assets/user/plugins/bxslider/jquery.bxslider.min.js"></script>
        <script src="./assets/user/plugins/nouislider/jquery.nouislider.min.js"></script>
        <script src="./assets/user/plugins/flexslider/jquery.flexslider.js"></script>
        <script src="./assets/user/js/custom.js"></script>
        <script> 

            function ThongBaoLoi(Loi) {
                return $(`<div class="alert alert-danger" style="margin-top: 15px">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <strong>${Loi}</strong>
                                </div>`)
            }

            function validateForm() {
                var username = document.getElementById('username').value;
                var email = document.getElementById('email').value;
                var password = document.getElementById('password').value;
                var confirmpassword = document.getElementById('confirmpassword').value;
                if (username == "" || email == "" || password == "" || confirmpassword == "") {
                    $('#tbLoi').text('').append(ThongBaoLoi('Không được để trống thông tin'));
                    return false;
                }
                if (password.localeCompare(confirmpassword) != 0) {
                    $('#tbLoi').text('').append(ThongBaoLoi('Mật khẩu không trùng khớp'));

                    return false;
                }

                if ($('#g-recaptcha-response').val() == '') {
                    $('#tbLoi').text('').append(ThongBaoLoi('Chưa xác minh Captcha'));
                    return false;
                }
                return true;
            }

        </script>

</body>

</html>