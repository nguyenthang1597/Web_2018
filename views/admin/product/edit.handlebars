    CKEDITOR.replace('MoTa', {
        "extraPlugins": 'imagebrowser',
        "imageBrowser_listUrl": "/files"
    });
    CKEDITOR.replace('ChiTiet', {
        "extraPlugins": 'imagebrowser',
        "imageBrowser_listUrl": "/files"
    });
</script>

<script>
    $(document).ready(function () {
        $('#HangXe').val('{{{product.HangXe}}}').change();
        $('#LoaiXe').val('{{{product.LoaiXe}}}').change();
    })

</script> {{/section}}