<div class="main-content">

    {{>admin-header}}
    <hr />
    {{>admin-breadcrumb}}
    <h2>{{heading}}</h2>
    {{#if successMessage}}
	<div class="alert alert-success">{{successMessage}}</div>
	{{/if}}
	{{#if errorMessage}}
	<div class="alert alert-danger">{{errorMessage}}</div>
	{{/if}}
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-primary" data-collapsed="0">
                <script type="text/javascript">
                    jQuery(document).ready(function ($) {
                        var $table1 = jQuery('#table-1');
                        $table1.DataTable({
                            "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                            "bStateSave": true
                        });
                    });
                </script>
                <div class="panel-body">
                    <table class="table table-bordered datatable" id="table-1">
                        <thead>
                            <tr>
                                <th data-hide="phone">ID</th>
                                <th>Tên</th>
                                <th>Hãng xe</th>
                                <th>Loại xe</th>
                                <th>Giá bán</th>
                                <th>Số lượng</th>
                                <th>Số lượng còn lại</th>
                                <th data-hide="phone,tablet">Ẩn</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr class="odd gradeX">
                                <td id="Id">{{Id}}</td>
                                <td>{{TenSP}}</td>
                                <td>{{TenHangXe}}</td>
                                <td>{{TenLoaiXe}}</td>
                                <th>{{GiaBan}}</th>
                                <td>{{SoLuong}}</td>
                                <td>{{SoLuongConLai}}</td>
                                <td class="center">
                                    {{#ifCond isHide '==' 1}}
                                    <div class="make-switch" data-on="primary" data-off="info">
                                        <input type="hidden" id="id" value="{{id}}">
                                        <input type="checkbox" class="hide" name="hide" checked>
                                    </div>
                                    {{else}}
                                    <div class="make-switch" data-on="primary" data-off="info">
                                        <input type="hidden" id="id" value="{{id}}">
                                        <input type="checkbox" class="hide" name="hide">
                                    </div>
                                    {{/ifCond}}
                                </td>
                                <td class="center">
                                    <a href="/admin/product/edit/{{Id}}" class="btn btn-primary btn-sm btn-icon icon-left">
                                        <i class="entypo-pencil"></i>
                                        Sửa
                                    </a>

                                    <a href="javascript:void(0)" class="btn btn-danger btn-sm btn-icon icon-left deleteProduct">
                                        <i class="entypo-cancel"></i>
                                        Xoá
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

