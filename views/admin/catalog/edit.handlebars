<div class="main-content">

    {{>admin-header}}

    <hr />
    {{>admin-breadcrumb}}
    <h2>{{heading}}</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">
                <div class="panel-body">
                    <form role="form" method="post" enctype="multipart/form-data" class="form-horizontal form-groups-bordered">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">ID hãng xe</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" value="{{catalog.Id}}" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tên hãng</label>

                            <div class="col-sm-5">
                                <input type="hidden" name="id" value="">
                                <input type="text" name="TenHang" id="TenHang" class="form-control" placeholder="Tên hãng xe" value="{{catalog.TenHang}}" required>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ảnh</label>
                            <div class="col-sm-5">
                                {{#if book.picture}}
                                <img src="/upload/book/{{book.picture}}" width="400" height="auto" alt=""> {{else}}
                                <input type="file" name="Pic" class="form-control"> {{/if}}
                            </div>
                        </div>

                        {{#if book.picture}}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Chọn ảnh thumbnail khác</label>
                            <div class="col-sm-5">
                                <input type="file" name="Pic" class="form-control">
                            </div>
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Ẩn/hiện</label>
                           <div class="col-sm-5">
                                    <div class="bs-example">
                                        <div class="make-switch" data-on="primary" data-off="info">
                                            {{#ifCond catalog.isHide '==' 1}}
                                            <input type="checkbox" name="isHide" checked> {{else}}
                                            <input type="checkbox" name="isHide"> {{/ifCond}}
                                        </div>
                                    </div>

                                </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-8" style="text-align: center;">
                                <div class="bs-example">
                                    <button type="submit" class="btn btn-green btn-icon">
                                        Sửa hãng xe
                                        <i class="entypo-check"></i>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

